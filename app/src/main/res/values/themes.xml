<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Class1DHFinalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WatchCardDefault">
        <item name="cardBackgroundColor">@color/lighter_gray</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="cardElevation">@dimen/watch_card_elevation</item>
    </style>

    <style name="WatchCardTitle">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="android:textColor">@color/secondary_blue</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="WatchCardGenre">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WatchCardInfo">
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonIcon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">@dimen/button_icon_size</item>
        <item name="android:minHeight">@dimen/button_icon_size</item>
    </style>

    <style name="WatchCardYear" parent="WatchCardAboveTitleText">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
    </style>

    <style name="WatchCardProvider" parent="WatchCardAboveTitleText">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
    </style>

    <style name="WatchCardAboveTitleText">
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WatchTextEmptyState">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleDefault">
        <item name="android:layout_marginTop">@dimen/margin_double</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SubtitleDefault" parent="TitleDefault">
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="MovieTvSubtitle" parent="SubtitleDefault">
        <item name="android:textAlignment">viewStart</item>
        <item name="fontWeight">100</item>
    </style>
</resources>